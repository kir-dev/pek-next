<% stylesheet 'evaluation' %>

<h1>Körös beszámoló szerkesztése</h1>
<div id="content-main" class="uk-panel uk-panel-box">
  <div class="uk-container-center uk-overflow-container">
    <%= form_for @evaluation, url: group_evaluation_path(@evaluation.group, @evaluation),
      html: { class: 'uk-form' } do |f| %>

      <%= f.text_area :justification, rows: 20, placeholder: 'Beszámoló', class: 'uk-textarea uk-width-1-1', readonly: !@can_edit %>

      <%= link_to 'Vissza', group_evaluation_path(@evaluation.group, @evaluation), class: "uk-button uk-margin-top" %>
      <% if @can_edit %>
        <%= f.submit 'Mentés', class: 'uk-button uk-button-success uk-margin-top uk-align-right' %>
      <% end %>
    <% end %>
  </div>
</div>

<% if list? %>

  <ul class="uk-list uk-list-striped uk-margin-large-bottom uk-width-1-1">
    <% active_users(@viewmodel.group) do |member| %>
      <%= render 'group_member_list_item', member: member %>
    <% end %>
  </ul>

<% else %>

  <div class="uk-grid uk-width-1-1 uk-margin-large-bottom" id="active_users_grid" data-uk-grid="{gutter: 20}">
    <% active_users(@viewmodel.group) do |member| %>
      <%= render 'group_member_grid_item', member: member %>
    <% end %>
  </div>

<% end %>

<div id="active_users_paginate">
  <%= paginate @active_users, param_name: 'active_users_page' %>
</div>
